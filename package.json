{
  "name": "node-template",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon index.ts",
    "test": "jest",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "jest": "25.1.0",
    "nodemon": "2.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node ./index.ts"
  }
}
